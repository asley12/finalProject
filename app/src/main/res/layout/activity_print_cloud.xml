<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grad"
    tools:context=".printCloudActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_transparent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_transparent"
        android:orientation="horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white_transparent"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/arrow" />

    </Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="21dp"
        android:orientation="horizontal"
        android:text="@string/print_from_cloud"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
    android:layout_width="93dp"
    android:layout_height="93dp"
    android:layout_marginStart="155dp"
    android:layout_marginTop="340dp"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/cloud_button">

        <Button
            android:id="@+id/cloud_btn"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/print_from_cloud2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="230dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cloud_button">

        <Button
            android:id="@+id/dropBox_btn"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/dropbox_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cloud_button">

        <Button
            android:id="@+id/evernote_btn"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/evernote_icon" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="93dp"
    android:layout_height="93dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="300dp"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@drawable/cloud_button">

    <Button
        android:id="@+id/googleDrive_btn"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@mipmap/drive_icon" />
</LinearLayout>

    <LinearLayout
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="420dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cloud_button">

        <Button
            android:id="@+id/oneDrive_btn"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/onedrive_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="420dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cloud_button">

        <Button
            android:id="@+id/box_btn"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/box_icon" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>